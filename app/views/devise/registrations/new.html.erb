<div class="wrapper-sign-up">

<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">

        <h2 class="sign-up-title">Hi there! Please sign up here.</h2>


        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :first_name, required: true, input_html: { class: "recognitionStyling" }, label_html: { class: "type" } %>
            <%= f.input :last_name, required: true, input_html: { class: "recognitionStyling" }, label_html: { class: "type" } %>
            <%= f.input :email, required: true, autofocus: true, input_html: { class: "recognitionStyling" }, label_html: { class: "type" } %>
            <%= f.input :password, required: true, input_html: { class: "recognitionStyling" }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label_html: { class: "type" } %>
            <%= f.input :photo, label_html: { class: "type" } do %>
              <%= f.file_field :avatar %>
              <%= f.hidden_field :avatar_cache %>
            <% end %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "sign-in-button" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

    </div>
  </div>
</div>

</div>

