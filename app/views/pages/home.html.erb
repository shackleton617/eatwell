<!-- temporary style tag for NavBar build -->

<!-- navbar  -->
<% content_for :navbar do %>
<%= render 'shared/navbar_home' %>
<% end %>
<!-- navbar end -->

<div class="container" style="z-index: -1000;">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6" style="z-index: -1000; position: static;">  <!-- eatwell logo  and icons -->
      <div class="banner text-center">
        <%= image_tag "eatwell-home-logo.png", width: "180", class: "logo-home" %>
        <ul class="list-inline text-center">
          <li>
            <div class="group-icon">
              <%= image_tag "home_sourcing_icon.png", height: "25" %>
              <p>sourcing</p>
            </div>
          </li>
          <li>
            <div class="group-icon">
              <%= image_tag "home_community_icon.png", height: "25" %>
              <p>community</p>
            </div>
          </li>
          <li>
            <div class="group-icon">
              <%= image_tag "home_recycle_icon.png", height: "25" %>
              <p>recycling</p>
            </div>
          </li>
        </ul>
      </div>
      <!-- eatwell logo  and icons end -->

      <!-- search form -->
      <div style="margin-bottom: 20px">
        <%= form_tag(restaurants_path, method: "get") do %>
          <%= text_field_tag :place, params[:place], class: "form-control form-home",
        placeholder: "Location search...", id: "restaurant_address" %>
          <%= text_field_tag :query, params[:query], class: "form-control form-home",
        placeholder: "Search by restaurant, cuisine, location ..." %>
          <%= submit_tag "SEARCH", class: "btn btn-block  button-home" %>
        <% end %>
      </div>

      <div>
        <%= form_tag restaurants_path, method: :get do %>
          <%= label :location, "Search restaurants near you" %>
          <%= text_field_tag request.location %>

          <%= submit_tag "Search" %>
        <% end %>
      </div>
      <!-- search form end -->

    </div>
  </div>
</div>

<!-- impact sentence -->
<div class="text-center text-banner-home">
  <h1>Discover Lisbon restaurants that care.</h1>
  <h1>Collect impact points!</h1>
</div>
<!-- impact sentence end -->

<!-- collections -->
<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <p class="coll-header">COLLECTIONS</p>
<!--         <div class="card-container-margin-home"> -->
        <%= render 'restaurants/collections-cards' %>
<!--         </div> -->
    </div>
  </div>
</div>
<!-- collections end -->



